{
    "name": "taiwan-solar/crawler",
    "description": "Taiwan Solar Power Plant Data Crawler and Analysis Toolkit",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Taiwan Solar Project",
            "email": "info@example.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "TaiwanSolar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TaiwanSolar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "crawl": "php scripts/crawl.php",
        "convert": "php scripts/convert.php",
        "generate-grid": "php scripts/generate-grid.php",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}